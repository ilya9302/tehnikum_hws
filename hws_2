if gender == 'F':
   
   if age >= int(18):
    print()
else:
  print("● Махмуд ака очень вредный: он общается только с совершеннолетними")


if gender == str("M"):
    print(name + ", рад знакомству, но помогу только девушкам")
else:
    print(name + ", рад знакомству, давай помогу тебе")


    a = int(input("Введи число а: "))
    b = int(input('Введи число b: '))
    if a + b:
     print("Сумма чисел равна: " + str(a + b))
    if a - b:
     print("Разность чисел равна: " + str(a - b))
    if a * b:
     print("Произведение чисел будет равным " + str(a * b))
